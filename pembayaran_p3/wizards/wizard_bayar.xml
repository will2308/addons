<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_bayar" model="ir.ui.view">
            <field name="name">pembayaran_p3.wizard_bayar</field>
            <field name="model">pembayaran_p3.wizard_bayar</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="pembayaran_id" invisible="True"/>
                            <field name="url"/>
                        </group>
                    </sheet>

                    <footer>
                        <button name="action_bayar" string="Bayar" type="object" icon="fa-money" class="btn-success"/>
                        <button string="batal" class="btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
