<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- product.product inherit form view -->
        <record id="purchase_order_training_inherit" model="ir.ui.view">
            <field name="name">purchase.order.training.inherit.view.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <field name="currency_id" position="after">
                    <field name="product_training"/>
                </field>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('product_training','=', parent.product_training)]</attribute>
                </xpath>
            </field>
        </record>
    </data>
    
</odoo>